<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="pmdnails">
                    <match url="^(.*)$"  />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true"/>
                    </conditions>
                    <action type="Rewrite" url="index.php?q={R:1}"  appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
